
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_layout"
    android:backgroundTint="@color/white">
    <ImageView
        android:id="@+id/announcementsImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/edit"/>
    <!-- Trivia Title -->
    <TextView
        android:id="@+id/announcementsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample Announcement Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />
    <!-- Trivia Text -->
    <TextView
        android:id="@+id/announcementsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample trivia text. Here's where the detailed description goes."
        android:textSize="14sp"
        android:textColor="#333333"
        android:lineSpacingExtra="4dp" />
</LinearLayout>