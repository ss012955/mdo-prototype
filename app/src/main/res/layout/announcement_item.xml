<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Full-width and full-height image -->
        <ImageView
            android:id="@+id/announcementsImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/edit" />

        <!-- Title and text section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/announcementsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Announcement Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/announcementsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample trivia text. Here's where the detailed description goes."
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
