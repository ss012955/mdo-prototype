<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="295dp"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_gravity="center">

    <!-- Dialog Title -->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     >

        <TextView
            android:id="@+id/availableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="128dp"
            android:layout_marginTop="5dp"
            android:textColor="#32CD32"
            android:fontFamily="@font/metropolis_bold"
            android:text="Available"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unavailableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/metropolis_bold"
            android:text="Unavailable"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Time Slots -->
    <LinearLayout
        android:id="@+id/slots_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <!-- Available Time Slots -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeSlot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="8:00-9:00 AM"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="#32CD32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="9:00-10:00 AM"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="#32CD32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="10:00-11:00 AM"
                android:textColor="#32CD32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/metropolis_bold"
                android:padding="8dp"
                android:text="11:00-12:00 PM"
                android:textColor="#32CD32"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Unavailable Time Slots -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeSlot5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/metropolis_bold"
                android:padding="8dp"
                android:text="1:00-2:00 PM"
                android:textColor="#32CD32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="2:00-3:00 PM"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="#32CD32"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="3:00-4:00 PM"
                android:textColor="#32CD32"
                android:fontFamily="@font/metropolis_bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSlot8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="4:00-5:00 PM"
                android:fontFamily="@font/metropolis_bold"
                android:textColor="#32CD32"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:layout_below="@id/slots_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FFFF00"
        android:padding="8dp"
        android:text="CONFIRM"
        android:textAllCaps="true"
        android:textColor="#000000"
        app:cornerRadius="15dp" />
</RelativeLayout>
