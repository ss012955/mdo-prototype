<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_gravity="center">
    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Guidelines"
        android:textSize="20sp"
        android:fontFamily="@font/metropolis_bold"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_bold"
                android:paddingBottom="8dp"
                android:text="● Atleast one upper case letter"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolis_bold"
                android:text="● Atleast one numerical 0-9"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolis_bold"
                android:text="● Minimum of 6 characters"
                android:paddingBottom="8dp" />


            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_bold"
                android:text="Close"
                android:layout_gravity="center"
                android:backgroundTint="@color/UMAKLIGHTBLUE"
                android:textColor="@color/white"
                android:layout_below="@id/textview_5"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:paddingHorizontal="20dp" />

</LinearLayout>

</ScrollView>

    </RelativeLayout>
