<!-- res/drawable/custom_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@android:color/white"/> <!-- Inside color of checkbox -->
            <corners android:radius="4dp" /> <!-- Optional: Rounded corners -->
            <stroke android:color="#FFFFFF" android:width="2dp" /> <!-- White border for checked state -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white"/> <!-- Inside color of checkbox -->
            <corners android:radius="4dp" /> <!-- Optional: Rounded corners -->
            <stroke android:color="#FFFFFF" android:width="2dp" /> <!-- White border for unchecked state -->
        </shape>
    </item>
</selector>
